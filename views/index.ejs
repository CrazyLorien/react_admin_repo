<html ng-app="barberapp">

  <head>
    <meta charset="utf-8" />
    <base href="/#" />
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.css"></link>
    <link rel="stylesheet" href="./stylesheets/colorbox.css" />
  </head>

  <body ng-controller="appCtrl">
    <% if(isAuthenticated) { %>
       <div authsection username='<%= username %>'> </div>
    <% } %>
    
    <h1><%= title %></h1>
    <% if(!isAuthenticated) { %>
        <div progress-bars></div>  
    <% } %>
    
    <div class="container" style="margin-top:5%" >   
      <div>
	<tabset>
          <% if(!isAuthenticated) { %>
          <tab ng-repeat="tab in tabs" active="tab.selectedTab">
            <tab-heading><a href="{{tab.link}}" ng-click="setSelectedTab(tab)">{{tab.label}}</a></tab-heading>        
          </tab>
	  <% }else{ %>
	  <tab ng-repeat="tab in authtabs" active="tab.authSelectedTab">
            <tab-heading><a href="{{tab.link}}" ng-click="setSelectedTab(tab)">{{tab.label}}</a></tab-heading>
	  </tab>
	  <% } %>
	</tabset>   
      </div>
      <div class="row">
	<div  class="col-md-6  photo-album">
	  <div>
	    <img width='100%' src="http://img12.deviantart.net/043c/i/2011/338/4/9/sexy_barber_by_archercalloway-d4i72zz.jpg"/>
            <img width='100%' src="https://farm4.staticflickr.com/3439/3773161142_35a85d1efa.jpg">
	    <img width='100%' src="https://s-media-cache-ak0.pinimg.com/236x/13/a3/47/13a34713be4fe17fc683b70093356f78.jpg" />
	  </div>
	</div>
	<div class="col-md-6" ng-view></div>
      </div>
      <div id="dialog-message" title="Progress  complete" hidden>
	<p>
	  <span class="ui-icon ui-icon-circle-check" style="float:left; margin:0 7px 50px 0;"></span>
	  You  successfully create order for visiting barber
	</p>
	<p>
	  we have send you email with notifications
	</p>
	Have a great day. We are waiting for you!
      </div>

      
  </body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>-->
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
  <link rel="stylesheet" href="./stylesheets/style.css">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-cookies.js"><script>
  <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <script src="./javascripts/vendor/moment.min.js"></script>
  <script src="./javascripts/vendor/angular-moment.min.js"></script>  
  <script src="./javascripts/vendor/angular-route.js"></script>
  <script src="./javascripts/vendor/jquery.colorbox.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-resource.min.js"></script>
  <script src="./javascripts/vendor/ui-bootstrap-tpls.js"></script> 
  <script src="./javascripts/main.js"></script>
  <script src="./javascripts/directives/progressBar.js" ></script>
  <script src="./javascripts/directives/loader.js" ></script>
  <script src="./javascripts/directives/authentication.js" ></script>
  <script src="./javascripts/schedule/scheduleCtrl.js"></script>
  <script src="./javascripts/schedule/datePickerCtrl.js"></script>
  <script src="./javascripts/reviews/reviewsCtrl.js"></script>
  <script src="./javascripts/clientInfo/clientInfoCtrl.js"></script>
  <script src="./javascripts/confirm/confirmCtrl.js"></script>
  <script src="./javascripts/info/info.js"></script> 
  <script src="./javascripts/services/barberServices-module.js"></script>
  <script src="./javascripts/services/nowValueService.js"></script>
  <script src="./javascripts/services/allDayTimesService.js"></script>
  <script src="./javascripts/services/databaseService.js"></script>
  <script src="./javascripts/orders/ordersCtrl.js"></script>
  <script src="./javascripts/barbers/barbersCtrl.js"></script>
  <script src="./javascripts/vendor/carousel.js"></script>

  <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore.js"></script>
</html>
